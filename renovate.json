{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Renovate configuration for homelab repository",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "description": "Group Docker image updates for docker-compose files",
      "matchManagers": [
        "docker-compose"
      ],
      "groupName": "Docker Compose dependencies",
      "schedule": [
        "on sunday"
      ]
    },
    {
      "description": "Group updates for GitHub Actions",
      "matchFileNames": [
        ".github/workflows/*.yml",
        ".github/workflows/*.yaml"
      ],
      "groupName": "GitHub Actions dependencies",
      "schedule": [
        "on sunday"
      ]
    },
    {
      "description": "Auto-merge patch updates for Docker images",
      "matchManagers": [
        "docker-compose"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "description": "Auto-merge minor updates for GitHub Actions",
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "description": "Group specific service updates together",
      "matchPackageNames": [
        "prometheus",
        "grafana",
        "alertmanager",
        "node-exporter"
      ],
      "matchFileNames": [
        "**/monitoring/**"
      ],
      "groupName": "Monitoring stack",
      "schedule": [
        "on sunday"
      ]
    },
    {
      "description": "Label major updates for manual review",
      "matchUpdateTypes": [
        "major"
      ],
      "labels": [
        "automerge-disabled"
      ],
      "automerge": false
    }
  ],
  "schedule": [
    "on sunday"
  ],
  "timezone": "UTC",
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "ðŸ”§ Docker Image Updates",
  "rebaseWhen": "conflicted",
  "labels": [
    "dependencies"
  ],
  "gitAuthor": "Renovate Bot <noreply@github.com>",
  "docker-compose": {
    "enabled": true
  },
  "ignorePresets": [
    ":prHourlyLimit2",
    ":prConcurrentLimit10"
  ],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "commitMessagePrefix": "chore:",
  "commitMessageSuffix": " ðŸ”„",
  "separateMajorMinor": false,
  "separateMultipleMajor": false
}
